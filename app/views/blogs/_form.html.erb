<%= form_for(@blog) do |f| %>
<% if @blog.errors.any? %>
  <div id="error_explanation">
    <h2><%= @blog.errors.count %>件のエラーがあります。</h2>

    <ul>
    <% @blog.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>
<%= f.label :タイトル %>
<%= f.text_field :title, class: 'form-control' %>
<br>
<%= f.label :内容 %>
<%= f.text_area :content, class: 'form-control input-lg' %>
<br>

<%= f.label :投稿写真 %>
<%= image_tag @blog.image.url if @blog.image? %>
<%= f.file_field :image %>
<%= f.hidden_field :image_cache %>
<br>

<%= f.submit '投稿', class: 'btn btn-primary btn-block' %>
<% end %>
<%= link_to "レシピ一覧画面にもどる", blogs_path %>
